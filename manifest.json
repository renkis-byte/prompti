{
    "manifest_version": 3,
    "name": "Prompti",
    "version": "1.0",
    "description": "Elevate your ChatGPT conversations with Prompti, a robust Chrome extension that aids in the construction of superior prompts.",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["storage","clipboardWrite"]
    
  }
  
